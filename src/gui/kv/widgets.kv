<MainClockWidget>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        id: time_display
        font_size: 120
        font_name: 'BowlbyOneSC-Regular.ttf'
        text: root.current_time
        color: (0, 0, 0, 1)
        pos_hint: {'center_x':.5, 'center_y':.4}
        size_hint: (1, 1)

<MainOptionButtons>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Button:
        id: set_time_button
        pos_hint: {'center_x':.2, 'center_y':.6}
        size_hint: (.2, .6)
        background_normal: './media/icons/setTime.png'
        background_down: './media/icons/setTime_pressed.png'
        on_press: root.parent.parent.manager.current = 'set_clock'
    Button:
        id: lights_button
        pos_hint: {'center_x':.5, 'center_y':.7}
        size_hint: (.4, .9)
        background_normal: './media/icons/setLight.png'
        background_down: './media/icons/setLight_pressed.png'
        on_press: self.parent.toggle_light()
    Button:
        id: set_alarm_button
        pos_hint: {'center_x':.8, 'center_y':.6}
        size_hint: (.2, .6)
        background_normal: './media/icons/setAlarm.png'
        background_down: './media/icons/setAlarm_pressed.png'
        on_press: root.parent.parent.manager.current = 'set_alarm'

