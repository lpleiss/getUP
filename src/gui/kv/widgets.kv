<BlobGameWidget>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size

    Button:
        id: 'instructionButton'
        text: root.instruction
        background_color: root.distractorColor
        size_hint : (1, .2)
        pos_hint: {'center_x': 0.5, 'center_y': 0.9}
        font_size : 50
        halign : "center"

<CalculatorGameWidget>:
    canvas.before:
        Color:
