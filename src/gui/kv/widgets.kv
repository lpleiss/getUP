        pos_hint: {'center_x':.35, 'center_y':.4}
        background_color: (242, 243, 244, 1)
        font_size: 75
        on_press: root.checkResult(root.option4)

<StretchWidget>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
    Button:
        id: 'instructionButton'
        text: "Do the stretch excercise shown on\nyour screen!"
        background_color: (255, 255, 255, 1)
        size_hint: (.8, .2)
        pos_hint: {'center_x': 0.4, 'center_y': 0.9}
        font_size: 35
        color: (0, 0, 0, 1)
        halign: "center"
    Image:
        id : 'stretchPic'
        source: "./media/icons/stretch.png"
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: (.5, .5)
    Button:
        id: ''
        text: root.instruction
        background_color: (255, 255, 255, 1)
        size_hint: (1, .2)
        pos_hint: {'center_x': 0.5, 'center_y': 0.1}
        font_size: 35
        color: (0, 0, 0, 1)
        halign: "center"
    Button:
        id: 'repsButton'
        text: str(root.score)
        size_hint: (.2, .2)
        background_color: (255, 255, 255, 1)
        pos_hint: {'center_x': 0.9, 'center_y': 0.9}
        font_size: 50
        color: (0, 0, 0, 1)

